@page
@model Escola.Pages.UsuariosModel
@{
}

@if (Model.Usuarios.Any())
{
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
         {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nome</td>
                <td>
                    <a asp-page="/Editar" asp-route-Id="@usuario.Id" class="btn btn-warning">Editar</a>
                    <a asp-page="/Editar" asp-page-handler="Remover" asp-route-Id="@usuario.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
         }
    </tbody>
</table>
}
else
{
    <h2 class="text-center">Nenhum usuário encontrado</h2>
}